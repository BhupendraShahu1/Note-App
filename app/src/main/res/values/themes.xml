<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NoteApp" parent="Theme.Material3.DayNight.NoActionBar">


        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#ffffff</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#000000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>

    <style name="Theme.NoteApp" parent="Base.Theme.NoteApp" />

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">#B3000000</item>
    </style>

    <style name="parent_linear_layout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="icon_background">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="search_background">
        <item name="android:background">@drawable/bgsearch</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <style name="statusBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="switch3">
        <item name="colorSwitchThumbNormal">#000000</item>
    </style>

    <style name="background_drawable">
        <item name="android:background">@drawable/item_background</item>
    </style>
    <style name="item2_text">
        <item name="android:textColor">#80000000</item>
    </style>
</resources>