<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NoteApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>
        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
        <item name="neumorph_shadowColorLight">#59000000</item>
        <item name="neumorph_shadowColorDark">#61FFFFFF</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Backgrd">
        <item name="android:background">@color/black</item>
    </style>

    <style name="iconbg">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="searchbg">
        <item name="android:background">@drawable/bgsearch</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
    </style>

    <style name="statusBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="reversBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="reversText">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>